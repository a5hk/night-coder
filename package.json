{
  "name": "night-coder",
  "displayName": "Night Coder",
  "description": "A dark theme for Night Coders",
  "version": "3.6.0",
  "publisher": "a5hk",
  "author": "a5hk",
  "license": "MIT",
  "homepage": "https://github.com/a5hk/night-coder",
  "repository": {
    "type": "git",
    "url": "https://github.com/a5hk/night-coder"
  },
  "type": "module",
  "scripts": {
    "lint": "eslint ./src/** --ext .ts",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "format": "prettier --write ./color-themes/vscode/themes/*.json ./color-themes/vscode/package.json ./color-themes/windows-terminal/*.json",
    "gen": "npm run lint && npm run clean && npm run build && node ./dist/index.js && npm run format",
    "vspack": "node ./scripts/package.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/chroma-js": "^2.1.3",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "ansi-regex": ">=6.0.1",
    "chroma-js": "^2.1.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "xml-formatter": "^2.4.1"
  }
}
